<div class="container">
  <h1 class="my-5 text-center">Create a cocktail</h1>
    <div class='row justify-content-center'>
      <div class="col-12 col-lg-4">
        <div class="wrapper">
          <%= simple_form_for(@cocktail) do |f| %>
            <%= f.input :name, label: 'Cocktail name' %>
            <%= f.input :photo, as: :file, input_html: { class: 'input-photo' } %>
            <%= f.submit class: 'btn btn-success'%>
            <% if from_show %>
              <%= link_to "Back", cocktails_path, class: 'btn btn-info mr-3' %>
              <%= hidden_field_tag 'from_show', false %>
            <% else %>
              <%= link_to "Back", cocktail_path(@cocktail), class: 'btn btn-info mr-3' %>
              <%= hidden_field_tag 'from_show', true %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
</div>