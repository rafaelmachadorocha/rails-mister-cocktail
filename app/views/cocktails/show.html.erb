<div class="container">
  <h1 class="my-5 text-center"><%= @cocktail.name %></h1>
  <div class="border doses-card mx-auto mb-3 p-4">
    <ul class="dose-card my-5 dose w-100">
      <% @cocktail.doses.each do |dose| %>
        <li class="description d-block"><%= dose.description %> <span class="ingredient"><%= dose.ingredient.name %></span></li>
      <% end %>
    </ul>
    <div class="buttons w-80 mx-auto">
      <%= link_to "Back", cocktails_path, class: 'btn btn-primary mr-1' %>
      <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-success mr-1' %>
      <%= link_to "Delete Cocktail", cocktail_path(@cocktail), class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
