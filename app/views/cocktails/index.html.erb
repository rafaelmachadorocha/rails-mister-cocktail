<div class="container">
  <h1 class="text-center my-5">Cocktails</h1>
  <div class="row mb-4">
   <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-6 col-lg-4 mb-3">
      <div class="cocktail">
      <h2> <%= link_to cocktail.name, cocktail_path(cocktail) %> </h2>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to "Add a new Cocktail", new_cocktail_path, class: 'btn btn-primary' %>
</div>