<div class="container">
  <h1 class="text-center my-4">Cocktails</h1>
  <div class="row mb-4">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-4 mb-3">
        <div class="cocktail-card card">
          <h2> <%= cocktail.name %> </h2>
          <%= image_tag("https://images.unsplash.com/photo-1513558161293-cdaf765ed2fd", alt: "Cocktail image", class: "drink-image") %>  
          <%= link_to 'Details', cocktail_path(cocktail), class:'button-info btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>