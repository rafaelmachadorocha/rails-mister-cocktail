<div class="container">
  <h1 class="my-5 text-center">Create a cocktail</h1>
    <div class='row justify-content-center'>
      <div class="col-12 col-lg-4">
        <div class="wrapper">
          <%= simple_form_for(@cocktail) do |f| %>
            <%= f.input :name, label: 'Cocktail name' %>
            <%= f.input :photo, as: :file, input_html: { class: 'input-photo' } %>
            <%= f.submit class: 'btn btn-success mb-4 mt-3'%>
            <%= link_to "Back", cocktails_path, class: 'mb-4 mt-3 btn btn-info mr-3' %>
          <% end %>
        </div>
      </div>
    </div>
</div>
