<h1 class="my-5 text-center">Doses</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 col-lg-5">
      <div class="wrapper"> 
        <%= simple_form_for [@cocktail = Cocktail.find(params[:cocktail_id]), @dose] do |f| %>
          <div class="form-row">
            <div class="col">
              <%= f.input :description, label: :Measure %>
            </div>
            <div class="col">
              <%= f.input :ingredient %>
            </div>
          </div>
          <%= f.submit class: 'btn btn-success'%>
          <% if from_create %>
            <%= link_to "Back", edit_cocktail_path(@cocktail), class: 'btn btn-info mr-3' %>
          <% else %>
            <%= link_to "Back", cocktail_path(@cocktail), class: 'btn btn-info mr-3' %> 
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
  
